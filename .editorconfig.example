# EditorConfig: https://EditorConfig.org

# 默认使用UTF-8
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 如果有特定的Shift-JIS文件，可以这样指定
# [legacy/**/*.{txt,csv,sjis}]
# charset = shift_jis

# 或者为特定目录指定
# [old-project/**/*]
# charset = shift_jis

# Python文件
[*.py]
indent_style = space
indent_size = 4

# JavaScript/TypeScript文件
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# JSON文件
[*.json]
indent_style = space
indent_size = 2

